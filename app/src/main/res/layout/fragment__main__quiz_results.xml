<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.main.quiz_results.QuizResultsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment__main__quiz_results__head_tv"
        style="@style/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment__main__quiz_results__head_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment__main__quiz_results__graph_rc"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.mikephil.charting.charts.RadarChart
        android:id="@+id/fragment__main__quiz_results__graph_rc"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/fragment__main__quiz_results__head_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment__main__quiz_results__res_tv"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment__main__quiz_results__res_tv"
        style="@style/boldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment__main__quiz_results__res_tv"
        app:layout_constraintBottom_toTopOf="@id/fragment__main__quiz_results__rv"
        app:layout_constraintStart_toStartOf="@id/fragment__main__quiz_results__head_tv"
        app:layout_constraintTop_toBottomOf="@id/fragment__main__quiz_results__graph_rc" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment__main__quiz_results__rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/fragment__main__quiz_results__gl_tv"
        app:layout_constraintStart_toStartOf="@id/fragment__main__quiz_results__head_tv"
        app:layout_constraintTop_toBottomOf="@id/fragment__main__quiz_results__res_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment__main__quiz_results__gl_tv"
        style="@style/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment__main__quiz_results__gl_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment__main__quiz_results__rv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment__main__quiz_results__error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>