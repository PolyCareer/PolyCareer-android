<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="16dp"
    android:padding="10dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment__main__major_snippet__holder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragment__main__major_snippet__title"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="5dp"
        android:elevation="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fragment__main__major_snippet__iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fragment__main__major_snippet__title"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_launcher_background"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fragment__main__major_snippet__number"
            app:layout_constraintStart_toStartOf="@id/fragment__main__major_snippet__holder"
            app:layout_constraintEnd_toEndOf="@id/fragment__main__major_snippet__holder"
            app:layout_constraintTop_toTopOf="@id/fragment__main__major_snippet__holder"
            app:layout_constraintBottom_toBottomOf="@id/fragment__main__major_snippet__holder"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/white"
            android:textSize="60sp"
            tools:text="1"
            />
    </androidx.cardview.widget.CardView>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment__main__major_snippet__title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/boldText"
        android:layout_marginStart="15dp"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/fragment__main__major_snippet__holder"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="МО" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fragment__main__major_snippet__desc"
        style="@style/smallText"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment__main__major_snippet__holder"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/fragment__main__major_snippet__title"
        app:layout_constraintWidth_percent="0.70"
        tools:text="Математическое обеспечение и администрирование информационных систем" />


</androidx.constraintlayout.widget.ConstraintLayout>